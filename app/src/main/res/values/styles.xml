    </style>
    <style name="RadioButton_3" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorPriority_3</item>
        <item name="colorControlNormal">@color/colorBasic</item>
        <item name="android:text">@string/priority_3</item>
    </style>
</resources>
