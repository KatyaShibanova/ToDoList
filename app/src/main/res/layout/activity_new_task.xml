

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_frame"
        android:layout_marginVertical="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newTask_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/newTask_name"
            android:inputType="textMultiLine"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_frame"
        android:layout_marginVertical="5dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newTask_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/newTask_description"
            android:inputType="textMultiLine"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        >

        <!--TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingEnd="25dp"
            android:paddingStart="5dp"
            android:paddingVertical="15dp"
            android:textSize="18sp"
            android:text="@string/priority" /-->

    <!--com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_frame"
        android:layout_marginVertical="5dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/priority"
            android:background="@android:color/transparent"
            android:textColor="@android:color/transparent"
            android:textColorHint="@color/gray"
            -->

            <RadioGroup
                android:hint="@string/priority"
                android:id="@+id/priority"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/rounded_frame"
                >

                <RadioButton
                    android:id="@+id/radioButton_priority_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/gray"
                    android:theme="@style/RadioButton_priority_high"
                    />

                <RadioButton
                    android:id="@+id/radioButton_priority_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginEnd="40dp"
                    android:textColor="@color/gray"

                    android:theme="@style/RadioButton_priority_medium" />

                <RadioButton
                    android:id="@+id/radioButton_priority_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray"
                    android:theme="@style/RadioButton_priority_low"/>
            </RadioGroup>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"
            android:paddingVertical="15dp"
            android:textSize="18sp"
            android:text="@string/date"/>

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_frame"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:spinnersShown="true" />
    </LinearLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/button_save"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:onClick="save_click"/>
</LinearLayout>