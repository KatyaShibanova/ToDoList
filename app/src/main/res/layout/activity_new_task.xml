

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_frame"
        android:layout_marginVertical="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newTask_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/newTask_name"
            android:inputType="textMultiLine"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_frame"
        android:layout_marginVertical="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newTask_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/newTask_description"
            android:inputType="textMultiLine"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="0dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingEnd="25dp"
            android:paddingStart="5dp"
            android:paddingVertical="20dp"
            android:textSize="18sp"
            android:text="@string/priority" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rounded_frame"
            android:paddingVertical="20dp"
            android:paddingHorizontal="5dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:theme="@style/RadioButton_1"
                 />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/priority_2"
                android:theme="@style/RadioButton_2"
                tools:text="@string/priority_2" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:theme="@style/RadioButton_3"
                android:text="@string/priority_3" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:onClick="save_click"/>
</LinearLayout>